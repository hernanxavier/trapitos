      <field name = 'name'>Color</field>
      <field name = 'res_model'>tra.color.tela</field>
      <field name = 'view_mode'>form,tree</field>
    </record>
    <!-- FORM -->
    <record model = 'ir.actions.act_window.view' id = 'tra_color_tela_form'>
      <field eval = '2' name = 'sequence'/>
