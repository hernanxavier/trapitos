    <!-- TREE -->
    <record model = 'ir.actions.act_window.view' id= 'tra_tela_tree'>
      <field eval = '1' name = 'sequence'/>
      <field name = 'view_mode'>tree</field>
      <field name = 'view_id' ref = 'tra_Tela_tree'/>
      <field name = 'act_window_id' ref = 'tra_tela_action'/>
    </record>

  </data>
</odoo>
