<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- **************************************
      Vistas para el modelo tra_ColorTela
    ****************************************-->

    <!-- Vista FORM -->
    <record model = 'ir.ui.view' id = 'tra_ColorTela_form'>
      <field name = 'model'>tra.color.tela</field>
      <field name = 'arch' type = "xml">
        <form>
          <sheet>
            <group>
              <field name = 'name' placeholder = 'Nombre del color de tela'/>
              <field name = 'codigo' placeholder = 'Código para el color'/>
              <field name = 'observacion' placeholder = 'Ingrese un texto'/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Vista TREE -->
    <record model = 'ir.ui.view' id = 'tra_ColorTela_tree'>
      <field name = 'model'>tra.color.tela</field>
      <field name = 'arch' type = 'xml'>
        <tree>
            <field name = 'name' />
            <field name = 'codigo' />
            <field name = 'observacion' />
        </tree>
      </field>
    </record>

    <!-- FILTROS -->
    <record model = 'ir.ui.view' id = 'tra_ColorTela_filter'>
      <field name = 'name'>Filtro de colores</field>
      <field name = 'model'>tra.color.tela</field>
      <field name = 'arch' type = 'xml'>
        <search>
          <field name = 'name' />
          <field name = 'codigo' />
        </search>
      </field>
    </record>

    <!-- **************************************
      Vistas para el modelo tra_Tela
    ****************************************-->
    <!-- Vista FORM -->
    <record model = "ir.ui.view" id = "tra_Tela_form">
      <field name = "model">tra.tela</field>
      <field name = "arch" type = "xml">
        <form>
          <sheet>
            <group>
              <field name = 'name' placeholder = 'Nombre de la tela'/>
              <field name = 'codigo' placeholder = 'Código para la tela'/>
              <field name = 'ancho' placeholder = 'Ancho de la tela en metros' />
              <field name = 'color_id' placeholder = 'Elija el color para la tela'/>
              <field name = 'costo' placeholder = 'Costo por metro antes de impuestos'/>
              <field name = 'iva' placeholder = 'Porcentaje del IVA'/>
              <field name = 'observacion' placeholder = 'Ingrese un texto'/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Vista TREE -->
    <record model = 'ir.ui.view' id = 'tra_Tela_tree'>
      <field name = 'model'>tra.tela</field>
      <field name = "arch" type = 'xml'>
        <tree>
            <field name = 'name' />
            <field name = 'codigo' />
            <field name = 'ancho' />
            <field name = 'color_id' />
            <field name = 'costo' />
            <field name = 'observacion' />
        </tree>
      </field>
    </record>

    <!-- FILTROS -->
    <record model = 'ir.ui.view' id = 'tra_Tela_filter'>
      <field name = 'name'>Filtro de telas</field>
      <field name = 'model'>tra.tela</field>
      <field name = 'arch' type = 'xml'>
        <search>
          <field name = 'name' />
          <field name = 'codigo' />
          <field name = 'ancho' />
          <field name = 'color_id' />
          <field name = 'costo' />
        </search>
      </field>
    </record>

