                <field name = 'codigo' placeholder = 'Cree un codigo para el producto'/>
                <field name = 'ancho_tela_id' readonly="1"/>
                <field name = 'costo_tela_id' readonly="1"/>
              </group>
              <group string = 'Cantidades a utilizar'>
                <field name = 'largo_frente' placeholder = 'Medida en metros'/>
                <field name = 'ancho_frente' placeholder = 'Medida en metros'/>
                <field name = 'largo_espalda' placeholder = 'Medida en metros'/>
                <field name = 'ancho_espalda' placeholder = 'Medida en metros'/>
                <field name = 'largo_manga' placeholder = 'Medida en metros'/>
                <field name = 'ancho_manga' placeholder = 'Medida en metros'/>
                <field name = 'scrap' placeholder = 'Medida en metros'/>
                <field name = 'largo_manga_extra' placeholder = 'Medida en metros'/>
                <field name = 'cantidad_tela_extra' placeholder = 'Medida en metros'/>
              </group>
            </group>
            <label for = 'accesorio_ids' class = 'oe_edit_only' />
            <field name = 'accesorio_ids'/>
            <group string = 'Resultados' >
              <group string = 'Totales de Materiales'>
                <field name = 'largo_total'/>
                <field name = 'ancho_total'/>
                <field name = 'tela_utilizada'/>
                <field name = 'total_tela_utilizada'/>
                <field name = 'piezas_reales'/>
              </group>
              <group string = 'Costos Forro'>
                <field name = 'costo_accesorios'/>
                <field name = 'costo_tela_cuerpo'/>
                <field name = 'costo_tela_extra'/>
                <field name = 'costo_total'/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

