    <!-- **************************************
      Vistas para el modelo product.template
    ****************************************-->
    <!-- Para agregar campos a la pestaña RRHH de empleados -->
    <record id="view_form_product_template_inherited" model= "ir.ui.view">
      <field name="name">view.form.product.template.inherited</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_only_form_view"/>
      <field name="arch" type="xml">
        <!-- ...match and extend elements here! ... -->
        <group name="group_general" position = "after">
          <group string='Proforma' name="Proforma">
            <field name="name"/>
            <field name="cliente_id"/>
          </group>
        </group>
      </field>
    </record>

    <!-- **************************************
      Vistas para el modelo hr.EMPLOYEE
    ****************************************-->
    <!-- Para agregar campos a la pestaña RRHH de empleados -->
    <record id="view_form_rh_employee_inherited" model= "ir.ui.view">
      <field name="name">view.form.rh.employee.inherited</field>
      <field name="model">hr.employee</field>
      <field name="inherit_id" ref="hr.view_employee_form"/>
      <field name="arch" type="xml">
        <!-- ...match and extend elements here! ... -->
        <group name="active_group" position = "after">
          <group string='Costes anuales' name="coste_empleado">
            <field name="sueldo_fijo"/>
            <field name="valor_iess"/>
            <field name="valor_horas_extra"/>
            <field name="valor_bonos"/>
            <field name="total_sueldo_fijo" force_save = '1'/>
            <field name="total_sueldo_variable" force_save = '1'/>
            <field name="total_sueldo" force_save = '1'/>
            <field name="tasa_empleado" force_save = '1'/>
          </group>
        </group>
      </field>
    </record>

