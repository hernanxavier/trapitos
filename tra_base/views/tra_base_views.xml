    <record model = 'ir.ui.view' id = 'tra_MateriaForro_form'>
      <field name = 'model'>tra.materia.forro</field>
      <field name = 'arch' type = "xml">
        <form string = 'Forro'>
          <sheet>
            <div class = 'oe_title'>
              <label for = 'name' class = 'oe_edit_only'/>
                <h1>
                  <field name = 'name' placeholder = 'Nombre para el forro'/>
                </h1>
            </div>
            <group>
              <group string = 'Material y Talla'>
                <field name = 'tela_id' placeholder = 'Elija una tela'/>
