<odoo>
  <data>

    <!-- **************************************
      Vistas para el modelo tra_ColorTela
    *******************************************-->

    <!-- Vista FORM -->
    <record model = 'ir.ui.view' id = 'tra_ColorTela_form'>
      <field name = 'model'>tra.color.tela</field>
      <field name = 'arch' type = "xml">
        <form>
          <sheet>
            <group>
              <field name = 'name' placeholder = 'Nombre del color de tela'/>
              <field name = 'codigo' placeholder = 'Código para el color'/>
              <field name = 'observacion' placeholder = 'Ingrese un texto'/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Vista TREE -->
    <record model = 'ir.ui.view' id = 'tra_ColorTela_tree'>
      <field name = 'model'>tra.color.tela</field>
      <field name = 'arch' type = 'xml'>
        <tree>
            <field name = 'name' />
            <field name = 'codigo' />
            <field name = 'observacion' />
        </tree>
      </field>
    </record>


